# SkillVal frontend
# Kopieer naar .env.local en vul met je eigen waardes

# Backend API (voor portfolio, trajecten, etc.)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# OpenAI API key (vereist voor de chatpagina)
OPENAI_API_KEY=your-openai-api-key

# Azure OpenAI Configuration (for vision capabilities)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-vision

# Optioneel: override het standaardmodel (default = gpt-4.1)
# OPENAI_ASSISTANT_MODEL=gpt-4.1
